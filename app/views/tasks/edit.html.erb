<h1>Edit Task</h1>


  <%= form_with model: @task do |f| %>
   <div> <%= f.label :title %>
    <%= f.text_field :title %>
   </div>
   <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
   </div>
   <div>
    <% unless @task.new_record? %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
    </div>
    <div>
    <%= f.submit %>
    </div>
  <% end %>


<li><%= link_to 'Back to tasks', tasks_path%></li>
